@model PIM_4_Semestre.Models.Entities.CadastroUser;

@{
    ViewData["Title"] = "Fazenda -- Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
     <style>
        a {
            text-decoration: none;
            color: black;
        }
    </style>
</head>
<body>
    <div class="mae">
        <div class="principal">
            <div class="inicial">
                <img src="~/images/arvore.png" alt="Logo" />
                <h1>LOGIN</h1>
            </div>
            <div class="inputs">
                <input type="text" placeholder="Email" class="email" />
                <input type="password" placeholder="Senha" class="senha" />
            </div>
            <button><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Entrar</a></button>
            <div class="ajuda">
                <div class="esqueci"><a class="nav-link text-dark" asp-area="" asp-controller="EsqueceuSenha" asp-action="Index">Esqueceu sua Senha ?</a></div>
                <div class="criar"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Criar Conta</a></div>
            </div>
        </div>
    </div>
</body>
</html>